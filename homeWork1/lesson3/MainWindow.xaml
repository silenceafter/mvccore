<Window x:Class="lesson3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lesson3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Target="{Binding ElementName=SleepValue}">Кол-во секунд до обновления: </Label>
        <TextBox x:Name = "SleepValue" MaxLength = "10">5</TextBox>        
        <TextBox x:Name = "TimerValue" MaxLength = "10"></TextBox> 
        <TextBox x:Name = "ResultValue" MaxLength = "250"></TextBox>
    </Grid>
</Window>
