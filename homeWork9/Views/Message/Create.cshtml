@model homeWork9.ViewModels.MessageDetailsViewModel
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Create message</title>
</head>
<body>
    <h4>new message</h4><br>
    @using (Html.BeginForm("Create","Message", FormMethod.Post))
    {
        //fromname
        <label for="FromName">From:</label><br>
        <input type="text" asp-route-id="" name="fromname" readonly="true" value="@Model.FromName" /><br>
        //toname
        <label for="ToName">To:</label><br>
        <input type="text" asp-route-id="" name="toname" value="" /><br>
        //theme
        <label for="Theme">Theme:</label><br>
        <input type="text" asp-route-id="" name="theme" value="" /><br>
        //body
        <label for="Body">Body:</label><br>
        <input type="text" asp-route-id="" name="body" value="" /><br>
        //ishtml
        <label for="IsHtml">Html:</label><br>
        <input type="text" asp-route-id="" name="ishtml" value="" /><br>

        //submit
        <input type="submit" value="submit" /><br>
    }

    <br>

   
</body>
</html>