@model homeWork9.ViewModels.ContactViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Contacts</title>
</head>
<body>
    <h4>email addresses</h4><br>
    @using (Html.BeginForm("Search","Contact"))
    {
        <label for="Name">search emailaddress:</label>
        <input type="text" asp-route-id="" name="emailaddress" value="" /> 
        <input type="submit" value="search" /><br>
    }  

    <br>
    <form method="post">
    @{        
        foreach (var viewModel in @Model.ContactDetailsViewModels)
        {
            //<h1>"Header here"</h1>
            <div>                
                @viewModel.Contact.EmailAddress
                <a asp-action="Create" asp-controller="Message" asp-for="Contact.Id" asp-route-id="@viewModel.Contact.Id" name="id">Send</a> | <a asp-controller="Message" asp-action="Index" asp-route-id="@viewModel.Contact.Id">Messages</a> | <a asp-controller="Contact" asp-action="Edit" asp-route-id="@viewModel.Contact.Id">Edit</a> | <a asp-controller="Contact" asp-action="Delete" asp-route-id="@viewModel.Contact.Id">Delete</a>
            </div>
            <br>
        }
    }   <a asp-controller="Contact" asp-action="Create">add</a>
    </form>
    <br>        
</body>
</html>