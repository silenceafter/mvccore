@model WorkerViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Office</title>
</head>
<body>
    <h4>Office workers</h4>
    @{
        foreach (var viewModel in @Model.WorkerDetailsViewModels)
        {            
            <div>
                <a href="@Url.Action("Details","Worker", new { id = @viewModel.Worker.Id })">
                    @Html.DisplayFor(modelItem => viewModel.Worker.FirstName)
                    @Html.DisplayFor(modelItem => viewModel.Worker.LastName)   
                </a>                             
            </div>            
        }        
    }  
</body>
</html>